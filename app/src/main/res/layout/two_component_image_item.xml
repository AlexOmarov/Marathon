<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="runner"
            type="ru.somarov.marathon.backend.main.plugin.runner_card.entity.Runner" />
    </data>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp">

    <ImageView
        android:id="@+id/mtrl_list_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:contentDescription="@string/avatar" />

    <TextView
        android:id="@+id/mtrl_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/colorPrimary"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:text="@{runner.email}"
        android:layout_toRightOf="@id/mtrl_list_item_icon"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/mtrl_list_item_secondary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mtrl_list_item_text"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/mtrl_list_item_icon"
        android:paddingEnd="16dp"
        android:maxLines="2"
        android:textColor="@color/colorPrimary"
        android:text="@{runner.birthday}"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_toRightOf="@id/mtrl_list_item_icon"
        android:paddingRight="16dp" />

</RelativeLayout>
</layout>